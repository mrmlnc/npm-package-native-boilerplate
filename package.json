{
  "name": "npm-package-boilerplate",
  "version": "0.1.0",
  "description": "Description",
  "license": "MIT",
  "repository": "mrmlnc/npm-package-boilerplate",
  "author": {
    "name": "Denis Malinochkin",
    "url": "https://mrmlnc.com"
  },
  "gypfile": true,
  "engines": {
    "node": ">=8"
  },
  "main": "out/index.js",
  "typings": "out/index.d.ts",
  "keywords": [
    "keyword"
  ],
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.53",
    "cpy-cli": "^2.0.0",
    "eslint": "^6.5.1",
    "eslint-config-mrmlnc": "^1.0.1",
    "mocha": "^6.2.0",
    "rimraf": "^3.0.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "bindings": "^1.5.0"
  },
  "scripts": {
    "clean": "rimraf out",
    "lint": "eslint \"src/typescript/**/*.ts\" --cache",
    "copy:rust": "cpy ./target/release/{lib,}rust.{dll,dylib,so} ./build --rename index.node",
    "compile:rust": "cargo build --release",
    "compile:ts": "tsc",
    "compile": "npm run compile:rust && npm run compile:ts",
    "test": "mocha \"out/**/*.spec.js\" -s 0",
    "build:rust": "npm run compile:rust && ls target/release && npm run copy:rust",
    "build:ts": "npm run clean && npm run lint && npm run compile:ts",
    "build": "npm run build:rust && npm run build:ts && npm test",
    "watch": "npm run clean && npm run compile -- --sourceMap --watch"
  }
}
