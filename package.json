{
  "name": "npm-package-boilerplate",
  "version": "0.1.0",
  "description": "Description",
  "license": "MIT",
  "repository": "mrmlnc/npm-package-boilerplate",
  "author": {
    "name": "Denis Malinochkin",
    "url": "https://mrmlnc.com"
  },
  "gypfile": true,
  "engines": {
    "node": ">=8"
  },
  "main": "out/index.js",
  "typings": "out/index.d.ts",
  "keywords": [
    "keyword"
  ],
  "devDependencies": {
    "@types/bindings": "^1.3.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.53",
    "mocha": "^6.2.0",
    "rimraf": "^3.0.0",
    "tslint": "^5.19.0",
    "tslint-config-mrmlnc": "^2.1.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "nan": "^2.14.0"
  },
  "scripts": {
    "clean": "rimraf out",
    "lint": "tslint \"src/typescript/**/*.ts\" -p . -t stylish",
    "compile:cpp": "node-gyp configure build",
    "compile:ts": "tsc",
    "compile": "npm run compile:cpp && npm run compile:ts",
    "test": "mocha \"out/**/*.spec.js\" -s 0",
    "build-cpp": "npm run compile:cpp",
    "build-ts": "npm run clean && npm run lint && npm run compile:ts",
    "build": "npm run build-cpp && npm run build-ts && npm test",
    "watch": "npm run clean && npm run compile -- --sourceMap --watch"
  }
}
